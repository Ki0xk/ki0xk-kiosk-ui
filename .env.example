# Mode (client-side)
NEXT_PUBLIC_MODE=demo_kiosk   # demo_online | demo_kiosk | demo_festival

# UI zoom (client-side, optional) — scale the kiosk UI for larger/smaller screens
# Default: 1 (no zoom). For 10" tablet via Weylus, try 1.5. Or use Ctrl++ in browser.
# NEXT_PUBLIC_ZOOM=1.5

# Chain (server-side)
CHAIN_ID=84532
RPC_URL=https://sepolia.base.org

# Kiosk wallet (server-side ONLY — NEVER NEXT_PUBLIC_)
PRIVATE_KEY=0x_your_private_key_here

# ClearNode (server-side)
CLEARNODE_WS_URL=wss://clearnet-sandbox.yellow.com/ws

# Token (server-side)
USDC_ADDRESS=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# Fees (server-side, optional)
FEE_RECIPIENT_ADDRESS=

# Serial (server-side, demo_kiosk/festival only)
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUD=115200

LOG_LEVEL=debug

# Circle API key (optional, for Arc testnet USDC faucet)
# Get from https://developers.circle.com/w3s/developer-console-faucet
CIRCLE_API_KEY=

# Festival mode config
FESTIVAL_ADMIN_PIN=1234
GATEWAY_API_URL=https://gateway-api-testnet.circle.com/v1

# Merchants (festival mode — set wallet addresses to enable)
MERCHANT_BEERS_ADDRESS=
MERCHANT_BEERS_CHAIN=base_sepolia
MERCHANT_FOOD_ADDRESS=
MERCHANT_FOOD_CHAIN=base_sepolia
MERCHANT_MERCH_ADDRESS=
MERCHANT_MERCH_CHAIN=base_sepolia
